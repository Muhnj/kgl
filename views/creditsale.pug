doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Available Produce for Credit Sales
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
  body
    .container.mt-5
      h2.text-center.text-primary Available Produce for Credit Sale
      table.table.table-hover.table-striped
        thead
          tr
            th Product Name
            th Category
            th Selling Price (UGX)
            th Action
        tbody
          // Check if the produces array is not empty
          if produces && produces.length > 0
            each produce in produces
              tr
                td= produce.productname
                td= produce.productType
                td.text-success= produce.sellingPrice.toFixed(2)
                td
                  a.btn.btn-outline-primary(href='/addCreditSale/' + produce._id) Add to Credit Sale
          else
            tr
              td(colspan="4") No products available for credit sales
