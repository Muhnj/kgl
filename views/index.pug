doctype html
html(lang='en')
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Karibu Groceries Ltd
  // Bootstrap 5
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css' rel='stylesheet')
  // Google Fonts
  link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Montserrat:wght@700&display=swap' rel='stylesheet')
  // Font Awesome
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')
  link(rel='stylesheet' href='/css/index.css')
  // Favicon
  link(rel='icon' href='/images/favicon.png' type='image/png')
body
  // Navigation Bar with Enhanced Design
  nav.navbar.navbar-expand-lg.navbar-dark.fixed-top
    .container
      a.navbar-brand(href='#')       
        span.logo-text Karibu 
          span.highlight-text Groceries
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav.ms-auto         
          li.nav-item
            a.nav-link(href='/login').login-btn
              i.fas.fa-sign-in-alt.me-1
              | Login

  // Hero Section
  .hero-section
    .hero-content
      h1.hero-title
        span.highlight-text More Than a Store <br>
        | Weâ€™re Your Grocery Family.
      p.hero-subtitle Your trusted source for premium groceries
      .hero-buttons        
        a.btn.btn-outline(href='/login')
          i.fas.fa-sign-in-alt.me-2
          | Login

  // Footer Section
  footer.footer
    .container
      .row
        .col-md-4.footer-brand         
          p.mt-2 Your trusted source for premium groceries
        .col-md-4.footer-links
          h5 Quick Links
          ul            
            li
              a(href='/') Home
            li
              a(href='/signingup') Register
            li
              a(href='/login') Login
        .col-md-4.footer-contact
          h5 Contact
          p
            i.fas.fa-map-marker-alt.me-2
            | Kampala, Uganda
          p
            i.fas.fa-phone.me-2
            | +256 751 000355
          p
            i.fas.fa-envelope.me-2
            | info@karibugroceries.com
    .copyright
      p &copy; 2025 Karibu Groceries Ltd. All rights reserved.

script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js')
script(src='/js/index.js')