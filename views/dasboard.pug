extends layout

block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h2
      i.fas.fa-tachometer-alt
      |  Manager Dashboard
    .text-muted
      | Last updated: 
      span#liveTime

  // Alerts Section
  .row
    .col-md-12
      .alert.alert-danger.alert-pulse.d-flex.align-items-center
        i.fas.fa-exclamation-circle.me-2
        div Warning! Grain Maize is running low (50kg remaining).
        button.btn.btn-sm.btn-outline-danger.ms-auto Restock Now

  // Stats Cards
  .row.mb-4
    .col-md-3.mb-3
      .card.h-100.primary
        .card-body
          .d-flex.justify-content-between
            div
              h6.card-subtitle.mb-2 Total Stock Value
              h2.card-title UGX 12.8M
              small.text-white 1,450 kg across 15 products
            i.fas.fa-box-open.fa-2x.opacity-50

    // ... (other stat cards) ...

  // Recent Activity
  .row
    .col-md-8
      include includes/current-stock.pug
    .col-md-4
      include includes/recent-sales.pug

block scripts
  script.
    // Dashboard-specific scripts
    function updateLiveTime() {
      document.getElementById('liveTime').textContent = new Date().toLocaleString();
    }
    setInterval(updateLiveTime, 1000);
    updateLiveTime();