doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Credit Sales List
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
  body
    .container.mt-5
      h2.text-center.text-primary Credit Sales List
      table.table.table-hover.table-striped
        thead
          tr
            th Product Name
            th Buyer Name
            th Total Amount (UGX)
            th Due Date
            th Sale Date
            th Status
            th (Paid Credit)
        tbody
          if creditSales && creditSales.length > 0
            each creditSale in creditSales
              tr
                td= creditSale.productname
                td= creditSale.buyerName
                td.text-success= creditSale.totalAmount.toFixed(2)
                td= creditSale.dueDate
                td= creditSale.saleDate
                td
                  if creditSale.status === 'paid'
                    span.badge.bg-success Paid
                  else
                    span.badge.bg-warning Pending
                td
                  // Action to mark the sale as paid
                  if creditSale.status !== 'paid'
                    form(action='/credit-sales/' + creditSale._id + '/mark-paid', method='POST')
                      button.btn.btn-outline-success(type='submit') Mark as Paid
          else
            tr
              td(colspan="7") No credit sales available
