doctype html
html(lang='en')
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Login - Karibu Groceries
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css' rel='stylesheet')
  link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap' rel='stylesheet')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')
  link(rel='stylesheet' href='/css/styles.css')
body.login-body
  .auth-container
    form#loginForm.auth-form(method="post" onsubmit="return validateLoginForm(event)")
      #form-alerts(aria-live="polite")
      
      .text-center.mb-4
        //- img.login-logo(src='/images/karibu-logo.png' alt='Karibu Groceries Logo' height='50')
        h2.mt-3 Welcome to KGL
        p.text-muted Please enter your credentials to login

      .form-group.mb-3
        label(for='email') 
          i.fas.fa-envelope.me-2
          | Email Address
        input#email.form-control(type='email' name='email' placeholder='Enter your email' autocomplete="email")
        span#error-email.error-message

      .form-group.mb-4
        label(for='password') 
          i.fas.fa-lock.me-2
          | Password
        .input-group
          input#password.form-control(type='password' name='password' placeholder='Enter your password' autocomplete="current-password")
          span.input-group-text.toggle-password(style="cursor: pointer")
            i.fas.fa-eye
        span#error-password.error-message

      .d-flex.justify-content-between.align-items-center.mb-4
        .form-check
          input#rememberMe.form-check-input(type='checkbox')
          label.form-check-label(for='rememberMe') Remember me
        a.forgot-password(href='#') Forgot password?

      button.btn.btn-login.w-100(type='submit')
        i.fas.fa-sign-in-alt.me-2
        | Login

      

  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js')
  script(src='/js/login.js')