doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title KGL - #{title}
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css")
    link(rel="stylesheet", href="/css/manager.css")

  body
    .wrapper
      // Sidebar Navigation (consistent across all pages)
      .sidebar.p-3
        h4.text-center.my-4
          i.fas.fa-store
          |  KGL
        hr
        ul.nav.flex-column
          li.nav-item
            a.nav-link(href="/manager/dashboard", class=(activePage === 'dashboard' ? 'active' : ''))
              i.fas.fa-tachometer-alt
              |  Dashboard
          li.nav-item
            a.nav-link(href="/manager/produce", class=(activePage === 'produce' ? 'active' : ''))
              i.fas.fa-plus-circle
              |  Record Produce
          li.nav-item
            a.nav-link(href="/manager/sales", class=(activePage === 'sales' ? 'active' : ''))
              i.fas.fa-cash-register
              |  Record Sale
          li.nav-item
            a.nav-link(href="/manager/stock", class=(activePage === 'stock' ? 'active' : ''))
              i.fas.fa-boxes
              |  Stock Management
          li.nav-item
            a.nav-link(href="/logout")
              i.fas.fa-sign-out-alt
              |  Logout

      // Main Content Area (will be filled by child templates)
      .main-content
        block content

    // Common Modals (can be included in all pages)
    include includes/modals/produce-modal.pug
    include includes/modals/sale-modal.pug
    include includes/modals/update-produce-modal.pug
    include includes/modals/update-sale-modal.pug

    // JavaScript Libraries (consistent across all pages)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src="/js/manager.js")

    // Page-specific scripts
    block scripts