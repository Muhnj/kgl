doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title KGL - Procurement Analytics
    link(rel='stylesheet' href='/css/mdd.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    script(src='https://cdn.jsdelivr.net/npm/chart.js')
    script(src='https://unpkg.com/lucide@latest')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')

  body
    header.header
      .header-container
        .branding
          .logo
            span.icon(data-lucide='shopping-cart' style='width: 24px; height: 24px')
          h1 KGL Procurement Dashboard
        .header-controls
          .branch-selector
            span.icon(data-lucide='map-pin' style='width: 18px; height: 18px')
            span#branchName Main Branch
          a.logout-btn(href="/logout")
            span.icon(data-lucide='log-out' style='width: 18px; height: 18px')
            | Sign Out

    nav.sidebar
      .nav-menu
        a.nav-item(href='/procurement' class='active')
          span.icon(data-lucide='package' style='width: 20px; height: 20px')
          span.nav-label Procurement
        a.nav-item(href='/sales')
          span.icon(data-lucide='dollar-sign' style='width: 20px; height: 20px')
          span.nav-label Sales
        a.nav-item(href='/inventory')
          span.icon(data-lucide='boxes' style='width: 20px; height: 20px')
          span.nav-label Inventory
        a.nav-item(href='/analytics')
          span.icon(data-lucide='bar-chart-2' style='width: 20px; height: 20px')
          span.nav-label Analytics

    main.main-content
      .user-list-section.mt-5
        .card.shadow-sm
          .card-header.bg-secondary.text-white.d-flex.justify-content-between.align-items-center
            h5.mb-0 All Registered Users
            a.btn.btn-sm.btn-light(href='/signups/new')
              i.fas.fa-user-plus.me-1
              | Add User

          .card-body.p-0
            table.table.table-hover.mb-0
              thead.table-light
                tr
                  th Name
                  th Email
                  th Role
                  th Status
                  th.text-center Actions
              tbody
                if signups && signups.length > 0
                  each signup in signups
                    tr
                      td #{signup.username || 'N/A'}
                      td #{signup.email || 'N/A'}
                      td #{signup.role || 'N/A'}
                      td
                        if signup.active
                          span.badge.bg-success Active
                        else
                          span.badge.bg-danger Inactive
                      td.text-center
                        .d-flex.justify-content-center.flex-wrap.gap-1
                          a.btn.btn-sm.btn-outline-info(href=`/signups/${signup._id}`)
                            i.fas.fa-eye.me-1
                            | View
                          a.btn.btn-sm.btn-outline-warning(href=`/signups/edit/${signup._id}`)
                            i.fas.fa-edit.me-1
                            | Edit
                          form(directive='post', action=`/signups/delete/${signup._id}`, onsubmit='return confirm("Are you sure you want to delete this user?")')
                            button.btn.btn-sm.btn-outline-danger(type='submit')
                              i.fas.fa-trash.me-1
                              | Delete
                          if !signup.active
                            form(directive='post', action=`/signups/activate/${signup._id}`)
                              button.btn.btn-sm.btn-outline-success(type='submit')
                                i.fas.fa-check.me-1
                                | Activate
                else
                  tr
                    td(colspan='5').text-center.text-muted.py-3 No signups found.

    script.
      lucide.createIcons();

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
